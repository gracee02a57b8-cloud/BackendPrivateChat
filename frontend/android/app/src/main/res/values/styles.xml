<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- BarsikChat dark theme colors -->
        <item name="colorPrimary">#111620</item>
        <item name="colorPrimaryDark">#0d1117</item>
        <item name="colorAccent">#6366f1</item>
        <item name="android:navigationBarColor">#111620</item>
        <item name="android:statusBarColor">#111620</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:navigationBarColor">#111620</item>
        <item name="android:statusBarColor">#111620</item>
    </style>


    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:background">@drawable/splash</item>
    </style>
</resources>