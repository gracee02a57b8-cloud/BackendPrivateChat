# === Backend ===
SERVER_PORT=9001
# IMPORTANT: Generate a strong unique key (min 32 chars). Example: openssl rand -base64 48
JWT_SECRET=CHANGE-ME-generate-strong-random-key-at-least-32-chars
JWT_EXPIRATION=86400000
MAX_FILE_SIZE=100MB
MAX_REQUEST_SIZE=100MB
UPLOAD_DIR=/app/uploads
CORS_ORIGINS=https://yourdomain.com
LOG_LEVEL=INFO
APP_LOG_LEVEL=INFO
DDL_AUTO=update
HIKARI_MAX_POOL=10
JAVA_OPTS=-Xmx512m -Xms256m

# === Database (PostgreSQL) ===
# IMPORTANT: Change default credentials before deploying!
DB_NAME=barsikdb
DB_USER=barsik
DB_PASSWORD=CHANGE-ME-use-strong-password

# === Frontend (build-time) ===
VITE_API_URL=https://yourdomain.com

